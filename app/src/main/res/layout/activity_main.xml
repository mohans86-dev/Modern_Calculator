<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/txt_Opts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Operations"
        android:textAlignment="textEnd"
        android:layout_margin="32dp"
        android:layout_marginBottom="20dp"
        android:textSize="40sp"
        android:textColor="#444444"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtResult"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_margin="28dp"
        android:layout_marginBottom="20dp"/>

<!---______________zero Row__________-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="146dp"
            android:layout_height="72dp"
            android:layout_marginEnd="15dp"
            android:text="All Clear"
            android:id="@+id/clrKey"
            android:textColor="@color/black"
            android:backgroundTint="@color/OptKeys"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:layout_marginEnd="15dp"
            android:text="D"
            android:id="@+id/delKey"
            android:textColor="@color/black"
            android:backgroundTint="@color/OptKeys"
            android:textSize="32sp"
            android:textStyle="bold"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:text="/"
            android:id="@+id/divKey"
            android:textColor="@color/black"
            android:backgroundTint="@color/OptKeys"
            android:textSize="32sp"
            android:textStyle="bold"/>
    </LinearLayout>


<!--    _____________first Row___________-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:layout_marginEnd="15dp"
            android:text="7"
            android:id="@+id/num7"
            android:textColor="@color/white"
            android:backgroundTint="@color/bgNumKeys"
            android:textSize="32sp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:layout_marginEnd="15dp"
            android:text="8"
            android:id="@+id/num8"
            android:textColor="@color/white"
            android:backgroundTint="@color/bgNumKeys"
            android:textSize="32sp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:layout_marginEnd="15dp"
            android:text="9"
            android:id="@+id/num9"
            android:textColor="@color/white"
            android:backgroundTint="@color/bgNumKeys"
            android:textSize="32sp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:text="*"
            android:id="@+id/multiKey"
            android:textColor="@color/black"
            android:backgroundTint="@color/OptKeys"
            android:textSize="32sp"
            android:textStyle="bold"/>
    </LinearLayout>


<!--    __________________2nd Row____________-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:layout_marginEnd="15dp"
            android:text="4"
            android:id="@+id/num4"
            android:textColor="@color/white"
            android:backgroundTint="@color/bgNumKeys"
            android:textSize="32sp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:layout_marginEnd="15dp"
            android:text="5"
            android:id="@+id/num5"
            android:textColor="@color/white"
            android:backgroundTint="@color/bgNumKeys"
            android:textSize="32sp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:layout_marginEnd="15dp"
            android:text="6"
            android:id="@+id/num6"
            android:textColor="@color/white"
            android:backgroundTint="@color/bgNumKeys"
            android:textSize="32sp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:text="-"
            android:id="@+id/subKey"
            android:textColor="@color/black"
            android:backgroundTint="@color/OptKeys"
            android:textSize="32sp"
            android:textStyle="bold"/>
    </LinearLayout>


<!--    ____________________3rd Row__________________-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:layout_marginEnd="15dp"
            android:text="1"
            android:id="@+id/num1"
            android:textColor="@color/white"
            android:backgroundTint="@color/bgNumKeys"
            android:textSize="32sp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:layout_marginEnd="15dp"
            android:text="2"
            android:id="@+id/num2"
            android:textColor="@color/white"
            android:backgroundTint="@color/bgNumKeys"
            android:textSize="32sp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:layout_marginEnd="15dp"
            android:text="3"
            android:id="@+id/num3"
            android:textColor="@color/white"
            android:backgroundTint="#069E78"
            android:textSize="32sp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:text="+"
            android:id="@+id/addKey"
            android:textColor="@color/black"
            android:backgroundTint="@color/OptKeys"
            android:textSize="32sp"
            android:textStyle="bold"/>
    </LinearLayout>


<!--    ____________4th Row______________-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:layout_marginEnd="15dp"
            android:text="00"
            android:id="@+id/D_0Key"
            android:textColor="@color/white"
            android:backgroundTint="@color/bgNumKeys"
            android:textSize="14sp"/>
        <Button
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:layout_marginEnd="15dp"
            android:text="0"
            android:id="@+id/num0"
            android:textColor="@color/white"
            android:backgroundTint="@color/bgNumKeys"
            android:textSize="32sp"/>

        <Button
            android:layout_width="146dp"
            android:layout_height="72dp"
            android:text="="
            android:id="@+id/equalKey"
            android:textColor="@color/black"
            android:backgroundTint="@color/OptKeys"
            android:textSize="39sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>